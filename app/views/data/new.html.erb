<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New datum</h1>

  <%= render "form", datum: @datum %>

  <% if @product_id %>
    <%= link_to "Back to data", category_product_data_path(category_id: @category_id, product_id: @product_id), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <% else %>
    <%= link_to "Back to home", root_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
</div>
