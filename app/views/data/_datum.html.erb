<div id="<%= dom_id datum %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= datum.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Date:</strong>
    <%= datum.date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Product:</strong>
    <%= datum.product_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Shop:</strong>
    <%= datum.shop_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this datum", datum, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this datum", edit_datum_path(datum), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
